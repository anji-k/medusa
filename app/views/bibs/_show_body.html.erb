    <% if @bib.referrings_analyses.size > 0 %>
    <style>
      iframe {
        min-width: 100%;
        min-height: 500px;
      }
    </style>
    <div class="row">
      <div class="col-md-10">
        <p class="text-left">Map on Earth or <%= @alias_specimen %>. Places and analyses are shown.</p>
      </div>
      <div class="col-md-2">
       <p class="text-right">
       <%= link_to @bib.rmap_url, class: "btn btn-default" do %>
         <span class="glyphicon glyphicon-fullscreen"></span>
       <% end %>
       </p>
      </div>
    </div>
    <%= rmap_iframe(@bib) %>
    <% end %>

    <!-- Nav tabs -->
    <ul class="nav nav-tabs">
      <li class="<%= active_if_current('at-a-glance') %>">
        <a href="#at-a-glance" data-toggle="tab">at-a-glance</a>
      </li>
      <li class="<%= active_if_current('specimen') %>">
        <a href="#specimen" data-toggle="tab"><%= @alias_specimen + data_count(@bib.specimens) %></a>
      </li>
      <li class="<%= active_if_current('box') %>">
        <a href="#box" data-toggle="tab"><%= "box#{data_count(@bib.boxes)}" %></a>
      </li>
      <li class="<%= active_if_current('place') %>">
        <a href="#place" data-toggle="tab"><%= "place#{data_count(@bib.all_places)}" %></a>
      </li>
      <li class="<%= active_if_current('analysis') %>">
        <a href="#analysis" data-toggle="tab"><%= "analysis#{data_count(@bib.referrings_analyses)}" %></a>
      </li>
      <li class="<%= active_if_current('file') %>">
        <a href="#file" data-toggle="tab"><%= "file#{data_count(@bib.attachment_files)}" %></a>
      </li>
      <li class="<%= active_if_current('table') %>">
        <a href="#table" data-toggle="tab"><%= "table#{data_count(@bib.tables)}" %></a>
      </li>
      <li class="<%= active_if_current('author') %>">
        <a href="#author" data-toggle="tab">author</a>
      </li>
    </ul>

    <!-- Tab panes -->
    <% tab_info = [
        ["at-a-glance",nil,"show representative properties of a record"],
        ["specimen",@bib.specimens,"show samples related to a bib"],
        ["box",@bib.boxes,"show boxes related to a bib"],
        ["place",@bib.places,"show spots related to a bib"],
        ["analysis",@bib.analyses,"show analyses related to a bib"],
        ["file",@bib.attachment_files,"show images related to a bib"],
        ["table", @bib.tables,"show tables related to a bib],
        ["author", nil,"show name of authors of a bib]
    ] %>
    <div class="tab-content">
      <% tab_info.each do |key,array| %>
        <div class="tab-pane<%= active_if_current(key) %>" id="<%= key %>"><%= render partial: key.underscore %></div>
      <% end %>
    </div>
