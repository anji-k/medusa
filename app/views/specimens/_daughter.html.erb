<div class="display-type">
  <div id="display-type-html">
    <table class="table table-condensed table-striped">
      <thead>
        <tr>
          <th></th>
          <th></th>
          <th>name</th>
          <th>physical-form</th>
          <th>quantity</th>
          <th>unit</th>
          <th></th>
          <th>global-id</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <%= form_tag bundle_edit_specimens_path, id: "specimen-bundle-form" do %>
          <% @specimen.children.each do |specimen| %>
            <tr>
              <td>
                <%= check_box_tag("ids[]", specimen.id, false, {id: "ids_#{specimen.id}", class: "select-row"}) if can?(:update, specimen) %>
              </td>
              <td><%= specimen.decorate.status_icon %></td>
              <td><%= link_to_if can?(:read, specimen), specimen.name, specimen, class: specimen_ghost(specimen) %></td>
              <td><%= specimen.physical_form.try!(:name) %></td>
              <td><%= specimen.try!(:quantity) %></td>
              <td><%= specimen.try!(:quantity_unit) %></td>
              <td></td>
              <td><%= specimen.try!(:global_id) %></td>
              <td>
                <%= link_to specimen_daughter_path(@specimen, specimen) + tab_param(__FILE__), method: :delete, title: "unlink specimen", data: {confirm: t("confirm.unlink")} do %>
                  <span class="glyphicon glyphicon-remove"></span>
                <% end %>
              </td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <%= form_for Specimen.new, url: specimen_daughters_path(@specimen) do |f|%>
            <%= hidden_tabname_tag(__FILE__) %>
            <th><%= check_box_tag nil, nil, false, class: "select-row-all" %></th>
            <th colspan="6"></th>
          <% end %>
          <%= form_tag link_by_global_id_specimen_daughters_path(@specimen), method: :post do %>
            <%= hidden_tabname_tag(__FILE__) %>
            <th>
	      <div class="input-group">
		<%= text_field_tag :global_id, nil, id: "daughter-global-id", class: "form-control input-sm" %>
		<span class="input-group-addon">
		  <%= link_to specimens_path(per_page: 10, format: :modal), "data-toggle" => "modal", "data-target" => "#search-modal", "data-input" => "#daughter-global-id" do %>
		  <span class="glyphicon glyphicon-search"></span>
		  <% end %>
		</span>
	      </div>
	    </th>
            <th>
              <%= button_tag title: "link specimen by global id", class: "btn btn-default" do %>
                <span class="glyphicon glyphicon-save"></span>
              <% end %>
            </th>
          <% end %>
        </tr>
      </tfoot>
    </table>
    <%= link_to_function "edit", "$('#specimen-bundle-form').submit();", class: "btn btn-default" %>
  </div>
  <div class="hidden" id="display-type-tex">
    <pre><code><%= @specimen.to_tex(@alias_specimen) %></code></pre>
  </div>
</div>
<div class="btn-group">
  <a href="#display-type-html" class="btn radio-button-group">html</a>
  <a href="#display-type-tex" class="btn radio-button-group">tex</a>
</div>

<%= javascript_tag do %>
  //ロスの計算
  function quantity_change_check() {
    var $form = $("form#divide_specimen");
    $.ajax({
      url: '<%= loss_divide_specimen_path %>',
      type: 'put',
      data: $form.serialize(),
      success: function(result){
        $("#parent_quantity").val(result.parent_quantity);
        $("#parent_quantity_unit").val(result.parent_quantity_unit);
        $("#divided_loss").text(result.loss_quantity + "(" + result.loss_quantity_unit + ")");
      }
    });
  };

  $(document).on("change", "input.quantity", function() {
    quantity_change_check();
  });

  $(document).on("click", ".remove-quantity-child", function() {
    quantity_change_check();
  });

  $(document).on("change", "#manual", function() {
    if ($(this).prop('checked')) {
      $("input.parent.quantity").attr("readonly", false);
      $(this).next().removeClass("glyphicon-minus");
      $(this).next().addClass("glyphicon-ok");
    } else {
      $("input.parent.quantity").attr("readonly", true);
      $(this).next().removeClass("glyphicon-ok");
      $(this).next().addClass("glyphicon-minus");
    }
    quantity_change_check();
  });

  $(document).on("succeed.ajaxForm", "#divide_specimen", function() {
    location.href="<% specimen_path(@specimen) %>";
  });
<% end %>

<div class="panel panel-default">
  <div class="panel-heading">
    Divide
  </div>
  <div class="panel-body">
    <%= form_for @divide_specimen, url: divide_specimen_path, remote: true, format: :json, html: { class: "update", role: "form", id: "divide_specimen" } do |f| %>
      <div class="row">
        <div class="col-sm-12">
          <%= f.label :comment, class: "small" %>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-12">
          <dd><%= f.text_field :comment, class: "form-control input-sm" %></dd>
        </div>
      </div>

      <hr>

      <div class="row">
        <div class="col-sm-3">
          <%= f.label :name, class: "small" %>
        </div>
        <div class="col-sm-2">
          <%= f.label :physical_form__id, class: "small" %>
        </div>
        <div class="col-sm-3">
          <%= f.label :quantity, class: "small" do "Quantity(#{f.object.quantity_was})" end %>
        </div>
        <div class="col-sm-3">
          <%= f.label :quantity_unit, class: "small" do "Quantity unit(#{f.object.quantity_unit_was})" end %>
        </div>
        <div class="col-sm-1">
          <%= f.label :manual, class: "small" %>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-3">
          <%= f.object.name %>
        </div>
        <div class="col-sm-2">
          <%= PhysicalForm.find_by(id: f.object.physical_form_id).try(:name) %>
        </div>
        <div class="col-sm-3">
          <%= f.text_field :quantity, class: "form-control input-sm parent quantity", id: "parent_quantity", readonly: true %>
        </div>
        <div class="col-sm-3">
          <%= f.text_field :quantity_unit, class: "form-control input-sm parent quantity", id: "parent_quantity_unit", readonly: true %>
        </div>
        <div class="col-sm-1">
          <div class="btn-group" data-toggle="buttons">
            <%= label_tag :manual, class: "btn btn-default btn-sm" do %>
              <%= check_box_tag :manual, true, false, autocomplete: "off" %>
              <span class="glyphicon glyphicon-minus"></span>
            <% end %>
          </div>
        </div>
      </div>

      <div class="children">
        <div class="row">
          <div class="col-sm-offset-11 col-sm-1">
            <%= f.label :delete, class: "small" %>
          </div>
        </div>
        <%= f.fields_for :children do |c| %>
          <% if c.object.id.nil? %>
            <%= render 'child_field', f: c %>
          <% end %>
        <% end %>
        <div class="row">
          <div class="col-sm-1">
            <%= f.label :add, class: "small" %>
          </div>
        </div>
        <div class="row">
          <div class="col-sm-1">
            <a class="btn btn-default btn-sm add-child">
              <span class="glyphicon glyphicon-plus"></span>
            </a>
          </div>
        </div>
      </div>

      <hr>

      <div class="row">
        <dl class="col-sm-12">
          <dt><%= f.label :divided_loss, class: "small" %></dt>
          <dd id="divided_loss">0.0(g)</dd>
        </dl>
      </div>
      <%= f.button class: "btn btn-default" do %>
        <span class="glyphicon glyphicon-save"></span>
      <% end %>
    <% end %>
  </div>
</div>
