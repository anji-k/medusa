    <% tab_info = [
        ["at-a-glance",nil,"show representative properties of a record"],
        ["daughter",@specimen.children,"show sub sample made from a sample"],
        ["history", @specimen.paths,"show the moving history of a sample"],
        ["analysis",@specimen.full_analyses,"show data and device of the analysis of a sample"],
        ["bib",@specimen.bibs,"show bibliography related to a sample"],
        ["file",@specimen.attachment_files,"show image files of a sample"],
        ["quantity", @specimen.self_and_descendants,"show change in quantity of a sample"]] %>
    <!-- Nav tabs -->
    <ul class="nav nav-tabs">
      <% tab_info.each do |key,array,message| %>
       <li class="<%= active_if_current(key) %>" ><a href="#<%= key %>" data-toggle="tab" title="<%= message %>"><%= key + data_count(array) %></a></li>
      <% end %>

    </ul>
    <!-- Tab panes -->
    <div class="tab-content">
      <% tab_info.each do |key,array| %>
        <div class="tab-pane<%= active_if_current(key) %>" id="<%= key %>"><%= render partial: key.underscore %></div>
      <% end %>
    </div>
 
