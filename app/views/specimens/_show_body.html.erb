    <% tab_info = [
        ["at-a-glance",nil,"show representative properties of the sample"],
        ["daughter",@specimen.children,"show sub-samples made from the sample"],
        ["history", @specimen.paths,"show boxes which contains the sample"],
        ["analysis",@specimen.full_analyses,"show analysis information of the sample"],
        ["bib",@specimen.bibs,"show bibliography related to the sample"],
        ["file",@specimen.attachment_files,"show data files of the sample"],
        ["quantity", @specimen.self_and_descendants,"show quantity history of the sample"]] %>
    <!-- Nav tabs -->
    <ul class="nav nav-tabs">
      <% tab_info.each do |key,array,message| %>
       <li class="<%= active_if_current(key) %>" ><a href="#<%= key %>" data-toggle="tab" title="<%= message %>"><%= key + data_count(array) %></a></li>
      <% end %>

    </ul>
    <!-- Tab panes -->
    <div class="tab-content">
      <% tab_info.each do |key,array| %>
        <div class="tab-pane<%= active_if_current(key) %>" id="<%= key %>"><%= render partial: key.underscore %></div>
      <% end %>
    </div>
 
