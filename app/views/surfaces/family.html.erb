<% if @surface.globe? %>
  <%= ActsAsMappable::Mappable::HtmlGenerator.generate(lat: 0, lng: 0, zoom: 0, width: 300, height: 300) %>
<% else %>
  <%= @surface.map(class: "small-map") %>
<% end  %>
<div id="family-tree">
  <%= @surface.family_tree %>
</div>
<%= @surface.related_pictures %>

<% if @surface.globe? %>
  <%= javascript_tag "actsAsMappable.initToMap();" %>
<% else %>
  <%= javascript_tag do %>
    $("div.surface-viewer").surfaceViewer();
  <% end %>
  <script>
    initSurfaceMap();
  </script>
<% end  %>
