defaults: &defaults
  site_name: "<%= appname %>"
  admin:
    email: <%= fetch(:admin_email, "admin@example.com") %>
    initial_password: <%= fetch(:admin_initial_password, [*1..9, *'A'..'Z', *'a'..'z'].sample(8).join) %>
  help_url: http://dream.misasa.okayama-u.ac.jp/documentation/
  barcode:
    prefix:
    type: 2D
  sesar:
    user:
    password:
    user_code:
  sign_in:
    enable_password: true
    enable_google: false
    enable_shibboleth: false
production:
  <<: *defaults
staging:
  <<: *defaults
timemachine:
  <<: *defaults
backup:
  host: localhost
  username: falcon
  dir_path:
    files: <%= fetch(:backup_to, "/srv/backup/#{appname}") %>/files
    db: <%= fetch(:backup_to, "/srv/backup/#{appname}") %>/db
